<div class="container">
    <div class="main">
        <h1>Editing post</h1>
        <% form_for(@post) do |f| %>
        <%= f.error_messages %>
        <p>
            <%= f.label :description %>
            <br/>
            <%= f.text_field :description %>
        </p>
        <p>
            <%= f.submit 'Update' %>
        </p>
        <% end %>
        <%= link_to 'Show', @post %>
    </div>|
    <div class="header" align="left">
        <%= link_to 'Back', posts_path %>
    </div>
</div>
