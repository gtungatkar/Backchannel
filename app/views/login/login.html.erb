<div class="container">
    <div class="main">
         <fieldset>
            <legend>
                Please Log In
            </legend>
            <% form_tag do %>
            <p>
                <label for="user_name">
                    Username:
                </label>
                <%= text_field_tag :user_name, params[:user_name] %>
            </p>
            <p>
                <label for="password">
                    Password:
                </label>
                <%= password_field_tag :password, params[:password] %>
            </p>
            <p>
                <%= submit_tag "Login" %>
            </p>
            <% end %>
            <% if flash[:notice] %>
            <div class="notice">
                <%= flash[:notice] %>
            </div>
            <% end %>
        </fieldset>
    </div>
</div>
